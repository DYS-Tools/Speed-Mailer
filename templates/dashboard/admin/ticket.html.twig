{% extends 'baseDashboard.html.twig' %}

{% block title %} Mon compte {% endblock %}

{% block body %}
<div class="container">
    <h1 class="centered">  Ticket admin </h1>
    <br/>
    <br/>
    <br/>

    <h4> Vous avez {{ countTicketOpen }} ticket(s) ouvert par des membres à résoudre. </h4>
    <br/>
    <br/>
    <br/>

    <table class="table table-striped table-dark">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">object</th>
            <th scope="col">Content</th>
            <th scope="col">Users</th>
            <th scope="col">Repondre et fermé le ticket </th>
        </tr>
        </thead>
        <tbody>
            {% for ticket in ticket %}
            <tr>
                <th scope="row">1</th>
                <td>{{ ticket.object}}</td>
                <td>{{ ticket.content}}</td>
                <td>{{ ticket.user.email}}</td>
                <td> <a href="{{ path('app_dashboard_admin_ticket_resolve', { 'id' : ticket.id } ) }}"><button type="button" class="btn btn-info">Résoudre</button><br/></a> </td>
            </tr>

            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
