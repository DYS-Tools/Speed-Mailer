{% extends 'baseDashboard.html.twig' %}

{% block title %} Mes Commandes {% endblock %}

{% block body %}
    <div class="container">
        <h1 class="centered">  Vos commandes </h1>

        <div class="container">

            <div class="row mt">
                <!-- SERVER STATUS PANELS -->
                <div class="col-md-4 col-sm-4 mb">
                    <div class="grey-panel pn donut-chart">
                        <div class="grey-header">
                            <h5>Commande</h5>
                        </div>
                        <div class="chart mt">
                            <div class="sparkline" data-type="line" data-resize="true" data-height="75" data-width="90%" data-line-width="1" data-line-color="#fff" data-spot-color="#fff" data-fill-color="" data-highlight-line-color="#fff" data-spot-radius="4" data-data="[200,135,667,333,526,996,564,123,890,464,655]"></div>
                        </div>
                        <p class="mt"><b>{{  orderCount }} </b><br/>Commande Effectu√©</p>
                    </div>
                    <!-- /grey-panel -->
                </div>
                <!-- /col-md-4-->
                <div class="col-md-4 col-sm-4 mb">
                    <div class="darkblue-panel pn">
                        <div class="darkblue-header">
                            <h5>Abonnement</h5>
                        </div>
                        <div class="chart mt">
                            <div class="sparkline" data-type="line" data-resize="true" data-height="75" data-width="90%" data-line-width="1" data-line-color="#fff" data-spot-color="#fff" data-fill-color="" data-highlight-line-color="#fff" data-spot-radius="4" data-data="[200,135,667,333,526,996,564,123,890,464,655]"></div>
                        </div>
                        <p class="mt"><b>XX</b><br/>Abonnement</p>
                    </div>
                    <!--  /darkblue panel -->
                </div>

             </div>
        </div>

        {% if orderCount > 0  %}
            <hr/>
            <h1> Details Commande </h1>
            <hr/>
            <table class="table table-striped table-dark">
                <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Status</th>
                    <th scope="col">Montant</th>
                    <th scope="col">Date</th>
                </tr>
                </thead>
                {% for order in order %}
                <tbody>
                <tr>
                    <th scope="row">1</th>
                    <td>{{  order.status }}</td>
                    <td>{{  order.amount }} euros</td>
                    <td>{{ order.createdAt|date('Y-m-d')}}</td>
                </tr>
                </tbody>
                {% endfor %}
            </table>
        {% endif %}

    </div>
{% endblock %}
